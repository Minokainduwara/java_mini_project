<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="700.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.app.Controllers.Lecturer.NoticesController">
    <children>
        <Pane layoutX="60.0" layoutY="126.0" prefHeight="448.0" prefWidth="372.0" style="-fx-background-color: d9d9d9; -fx-background-radius: 10px;">
            <children>
                <Label layoutX="23.0" layoutY="27.0" text="Add Notices">
                    <font>
                        <Font name="System Bold" size="20.0" />
                    </font>
                </Label>
                <HBox layoutX="153.0" layoutY="377.0" prefHeight="40.0" prefWidth="200.0">
                    <children>
                        <Button fx:id="clearButton" mnemonicParsing="false" onAction="#handleClearButton" prefHeight="35.0" prefWidth="88.0" style="-fx-background-color: #197c77; -fx-background-radius: 10px;" text="Clear" textFill="WHITE" />
                        <Button fx:id="addNotice" mnemonicParsing="false" onAction="#handleAddNotice" prefHeight="35.0" prefWidth="88.0" style="-fx-background-color: #197c77; -fx-background-radius: 10px;" text="Add Notice" textFill="WHITE">
                            <HBox.margin>
                                <Insets left="25.0" />
                            </HBox.margin>
                        </Button>
                    </children>
                </HBox>
                <TextArea fx:id="writeNotice" layoutX="23.0" layoutY="63.0" prefHeight="294.0" prefWidth="330.0" />
            </children>
        </Pane>
        <Pane layoutX="468.0" layoutY="126.0" prefHeight="448.0" prefWidth="372.0" style="-fx-background-color: d9d9d9; -fx-background-radius: 10px;">
            <children>
                <Label layoutX="23.0" layoutY="27.0" text="View Notice">
                    <font>
                        <Font name="System Bold" size="20.0" />
                    </font>
                </Label>
                <TextArea fx:id="viewNoticeArea" layoutX="27.0" layoutY="66.0" prefHeight="338.0" prefWidth="318.0">
                    <font>
                        <Font name="Calibri" size="16.0" />
                    </font>
                    <opaqueInsets>
                        <Insets top="30.0" />
                    </opaqueInsets>
                </TextArea>
            </children>
        </Pane>
    </children>
</AnchorPane>
