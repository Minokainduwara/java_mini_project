<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.*?>
<?import javafx.scene.effect.*?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.example.app.Controllers.LoginController"
           prefHeight="600.0" prefWidth="900.0"
           stylesheets="@../Styles/login.css">

    <BorderPane>
        <!-- Left side panel with branding and gradient background -->
        <left>
            <VBox styleClass="left-panel" alignment="CENTER" spacing="15" minWidth="350">
                <padding><Insets top="50" right="30" bottom="50" left="30"/></padding>

                <ImageView fitWidth="120" preserveRatio="true">
                    <Image url="@../Images/university_logo.png"/>
                    <effect>
                        <DropShadow color="#19797763" radius="10" />
                    </effect>
                </ImageView>

                <Label text="University" styleClass="logo-text">
                    <font>
                        <Font name="System Bold" size="28"/>
                    </font>
                </Label>

                <Label text="Management System" styleClass="logo-subtext">
                    <font>
                        <Font name="System" size="18"/>
                    </font>
                </Label>

                <Separator styleClass="divider" maxWidth="100"/>

                <Label text="Welcome Back" styleClass="welcome-text">
                    <font>
                        <Font name="System Bold" size="22"/>
                    </font>
                </Label>

                <Label text="Login to access your dashboard" styleClass="welcome-subtext" wrapText="true" textAlignment="CENTER">
                    <font>
                        <Font name="System" size="14"/>
                    </font>
                </Label>
            </VBox>
        </left>

        <!-- Right side with login form -->
        <center>
            <StackPane>
                <VBox styleClass="login-panel" alignment="CENTER" spacing="25" maxWidth="450">
                    <padding><Insets top="60" right="50" bottom="60" left="50"/></padding>

                    <Label text="Sign In" styleClass="signin-text">
                        <font>
                            <Font name="System Bold" size="26"/>
                        </font>
                    </Label>

                    <VBox spacing="10">
                        <Label text="Username" styleClass="field-label"/>
                        <TextField fx:id="usernameField" promptText="Enter your username" styleClass="text-field"/>
                    </VBox>

                    <VBox spacing="10">
                        <Label text="Password" styleClass="field-label"/>
                        <PasswordField fx:id="passwordField" promptText="Enter your password" styleClass="text-field"/>
                    </VBox>

                    <HBox alignment="CENTER_RIGHT">
                        <Hyperlink text="Forgot Password?" styleClass="forgot-password" onAction="#handleForgotPassword"/>
                    </HBox>

                    <Button fx:id="loginButton" text="LOGIN" styleClass="login-button" onAction="#handleLogin"
                            prefHeight="40" prefWidth="200" defaultButton="true"/>

                    <HBox alignment="CENTER" spacing="10">
                        <CheckBox fx:id="rememberMeCheckbox" styleClass="remember-me"/>
                        <Label text="Remember me" styleClass="remember-me-text"/>
                    </HBox>
                </VBox>
            </StackPane>
        </center>
    </BorderPane>
</StackPane>